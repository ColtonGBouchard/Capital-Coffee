@model CapitalCoffee.Data.Models.Shop

@{
    ViewBag.Title = "Delete";
}

<h2 style="color: white;">Delete</h2>

<h3 style="color: white;">Are you sure you want to delete this?</h3>
<div id="deleteShop">
    <dl class="dl-horizontal">
        <dt>
            @Html.HiddenFor(model => model.ShopId)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address1)
        </dd>

        @if (Model.Address2 != null) 
        { 
            <dt>
                @Html.DisplayNameFor(model => model.Address2)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Address2)
            </dd>
        }
        
        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Zip)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Zip)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-info" /> 
            @Html.ActionLink("Back", "Details", "Shop", new { id = Model.ShopId }, new { @class = "btn btn-default" })
        </div>
    }
</div>
